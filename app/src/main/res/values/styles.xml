<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"></style>

    <style name="ProgressBarStyle" parent="@android:style/Widget.ProgressBar.Horizontal"></style>

    <style name="ButtonStyle">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_marginTop">2dip</item>
        <item name="android:background">@drawable/login_selector</item>

    </style>


</resources>
