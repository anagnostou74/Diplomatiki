<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/shadow" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <TextView
                android:id="@+id/komma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mps_image"
                android:layout_centerInParent="true"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/mps_image"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:contentDescription="@string/photos"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/epitheto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/komma"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/onoma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/komma"
                android:layout_toRightOf="@+id/epitheto"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/on_patros_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/epitheto"
                android:text="@string/on_patros_label" />

            <TextView
                android:id="@+id/onomaPatros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/onoma"
                android:layout_toRightOf="@+id/on_patros_label"
                android:paddingLeft="2dp"
                android:paddingRight="2dp" />

            <TextView
                android:id="@+id/titlos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/onomaPatros"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/govPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titlos"
                android:singleLine="false"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/perif_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/govPosition"
                android:layout_margin="3dp"
                android:text="@string/perif_label" />

            <TextView
                android:id="@+id/perifereia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/govPosition"
                android:layout_margin="3dp"
                android:layout_toRightOf="@+id/perif_label"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin"
        android:layout_marginBottom="@dimen/card_margin">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <TextView
                android:id="@+id/birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/family"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/birth" />

            <TextView
                android:id="@+id/epaggelma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/family" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin"
        android:layout_marginBottom="@dimen/card_margin">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <TextView
                android:id="@+id/parliamentActivities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/socialActivities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parliamentActivities" />

            <TextView
                android:id="@+id/spoudes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/socialActivities" />

            <TextView
                android:id="@+id/languages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spoudes" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin"
        android:layout_marginBottom="@dimen/card_margin">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:drawableLeft="@drawable/address"
                android:drawablePadding="3dp" />

            <TextView
                android:id="@+id/site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/web"
                android:drawablePadding="3dp"
                android:focusable="true"
                android:gravity="center"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/mail_mp"
                android:drawablePadding="3dp"
                android:focusable="true"
                android:gravity="center"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/phone"
                android:drawablePadding="3dp"
                android:focusable="true"
                android:gravity="center"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/facebook_48"
                android:drawableLeft="@drawable/facebook_48"
                android:drawablePadding="3dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/tw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/twitter_48"
                android:drawableLeft="@drawable/twitter_48"
                android:drawablePadding="3dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/youtube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/youtube_48"
                android:drawableLeft="@drawable/youtube_48"
                android:drawablePadding="3dp"
                android:gravity="center" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/yt_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/card_margin"
            android:contentDescription="@string/photos"
            android:scaleType="fitCenter"
            android:src="@drawable/youtube_48"
            app:layout_gravity="center" />

        <ImageView
            android:id="@+id/fb_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/card_margin"
            android:contentDescription="@string/photos"
            android:scaleType="fitCenter"
            app:layout_gravity="center"
            app:srcCompat="@drawable/facebook_48" />

        <ImageView
            android:id="@+id/web_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/card_margin"
            android:contentDescription="@string/photos"
            android:scaleType="fitCenter"
            android:src="@drawable/web"
            app:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/twitter_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/card_margin"
            android:contentDescription="@string/photos"
            android:scaleType="fitCenter"
            app:layout_gravity="center"
            app:srcCompat="@drawable/twitter_48" />

        <ImageView
            android:id="@+id/email_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/card_margin"
            android:contentDescription="@string/photos"
            android:scaleType="fitCenter"
            android:src="@drawable/mail_mp"
            app:layout_gravity="center" />

        <ImageView
            android:id="@+id/maps_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/card_margin"
            android:contentDescription="@string/photos"
            android:scaleType="fitCenter"
            android:src="@drawable/address"
            app:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/phone_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/card_margin"
            android:contentDescription="@string/photos"
            android:scaleType="fitCenter"
            android:src="@drawable/phone"
            app:layout_gravity="center" />


    </LinearLayout>

</LinearLayout>