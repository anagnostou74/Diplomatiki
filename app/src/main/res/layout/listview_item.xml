<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp">

    <TextView
        android:id="@+id/epitheto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/flag" />

    <TextView
        android:id="@+id/onoma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/epitheto"
        android:paddingLeft="2dp" />

    <TextView
        android:id="@+id/titlos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/epitheto"
        android:layout_toRightOf="@+id/flag" />

    <TextView
        android:id="@+id/govPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titlos"
        android:layout_toRightOf="@+id/flag"
        android:singleLine="false" />

    <TextView
        android:id="@+id/perif_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/govPosition"
        android:layout_toRightOf="@+id/flag"
        android:text="@string/perif_label" />

    <TextView
        android:id="@+id/perifereia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/govPosition"
        android:layout_toRightOf="@+id/perif_label" />

    <ImageView
        android:id="@+id/flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="#000000"
        android:layout_margin="3dp" />

</RelativeLayout>