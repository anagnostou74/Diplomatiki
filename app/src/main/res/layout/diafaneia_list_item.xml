<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/material_indigo"
            android:padding="10dp"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/rss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subject"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:background="@mipmap/ic_splash"
            android:contentDescription="@string/photos" />

        <TextView
            android:id="@+id/file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subject"
            android:layout_toRightOf="@+id/rss"
            android:padding="10dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/ipiresia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/file"
            android:layout_gravity="start"
            android:layout_toRightOf="@+id/rss"
            android:background="@color/material_lighter_blue"
            android:padding="10dp"
            android:textAlignment="textStart"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/sec_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ipiresia"
            android:layout_gravity="start"
            android:layout_toRightOf="@+id/rss"
            android:background="@color/material_lighter_blue"
            android:padding="10dp"
            android:textAlignment="textStart"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/sinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sec_title"
            android:layout_toRightOf="@+id/rss"
            android:padding="10dp"
            android:textAlignment="center"
            android:lineSpacingExtra="8sp" />

        <TextView
            android:id="@+id/signer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sinfo"
            android:layout_toRightOf="@+id/rss"
            android:padding="10dp"
            android:textAlignment="center"
            android:lineSpacingExtra="8sp" />

        <TextView
            android:id="@+id/signer_full"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signer"
            android:layout_toRightOf="@+id/rss"
            android:padding="10dp"
            android:textAlignment="center"
            android:lineSpacingExtra="8sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>