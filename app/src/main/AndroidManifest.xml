<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gr.mobap">

    <uses-permission android:name="android.permission.INTERNET">

    </uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE">

    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE">

    </uses-permission>
    <uses-permission android:name="android.permission.READ_PHONE_STATE">

    </uses-permission>

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name="gr.mobap.Splash"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="gr.mobap.MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name="gr.mobap.ScrollingActivity"
            android:parentActivityName="gr.mobap.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="gr.mobap.MainActivity" />
        </activity>
        <activity android:name="gr.mobap.ekdoseis.DownloadPdfActivity" />
        <activity android:name="gr.mobap.organosi.OrganosiActivity" />
        <activity android:name="gr.mobap.web.SindesmoiActivity" />
        <activity android:name="gr.mobap.rss.NeaActivity" />
        <activity android:name="gr.mobap.rss.NomosxediaActivity" />
        <activity android:name="gr.mobap.web.entos.DiktioActivity" />
        <activity android:name="gr.mobap.PeriActivity" />
        <activity
            android:name="gr.mobap.images.Image"
            android:finishOnTaskLaunch="true" />
        <activity
            android:name="gr.mobap.images.DetailActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:finishOnTaskLaunch="true" />
        <activity
            android:name="gr.mobap.video.LiveVideoActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:finishOnTaskLaunch="true" />
        <activity
            android:name="gr.mobap.video.LiveVideoDioActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:finishOnTaskLaunch="true" />
        <activity
            android:name="gr.mobap.book.BookActivity"
            android:finishOnTaskLaunch="true" />

        <activity
            android:name="gr.mobap.youtube.IntentsTvActivity"
            android:finishOnTaskLaunch="true" />
    </application>
</manifest>