<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gr.sextreme">

    <uses-permission android:name="android.permission.INTERNET">

    </uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE">

    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE">

    </uses-permission>
    <uses-permission android:name="android.permission.READ_PHONE_STATE">

    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".Splash"
            android:label="@string/app_name"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".ScrollingActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="gr.sextreme.MainActivity" />
        </activity>
        <activity
            android:name=".ekdoseis.DownloadPdfActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".organosi.OrganosiActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".web.SindesmoiActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".rss.NeaActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".rss.NomosxediaActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".web.entos.DiktioActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".EpikoinoniaActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".PeriActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".images.Image"
            android:finishOnTaskLaunch="true"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".images.DetailActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:finishOnTaskLaunch="true"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".video.LiveVideoActivity"
            android:finishOnTaskLaunch="true"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".book.BookActivity"
            android:finishOnTaskLaunch="true"
            android:label="@string/app_name">
        </activity>

        <activity
            android:label="@string/app_name"
            android:name=".youtube.YouTubeAPIDemoActivity">
            <meta-data android:name="@string/isLaunchableActivity" android:value="false"/>
        </activity>

        <activity
            android:label="@string/videowall_demo_name"
            android:name=".youtube.VideoWallDemoActivity"
            android:screenOrientation="landscape"
            android:theme="@style/BlackNoBarsTheme"
            android:configChanges="orientation|screenSize|keyboardHidden">
            <meta-data android:name="@string/minVersion" android:value="11"/>
            <meta-data android:name="@string/isLaunchableActivity" android:value="true"/>
        </activity>

        <activity
            android:label="@string/videolist_demo_name"
            android:name=".youtube.VideoListDemoActivity"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <meta-data android:name="@string/minVersion" android:value="13"/>
            <meta-data android:name="@string/isLaunchableActivity" android:value="true"/>
        </activity>

        <activity
            android:label="@string/playerview_demo_name"
            android:name=".youtube.PlayerViewDemoActivity"
            android:screenOrientation="nosensor"
            android:configChanges="orientation|screenSize|keyboardHidden">
            <meta-data android:name="@string/minVersion" android:value="8"/>
            <meta-data android:name="@string/isLaunchableActivity" android:value="true"/>
        </activity>

        <activity
            android:label="@string/fragment_demo_name"
            android:name=".youtube.FragmentDemoActivity"
            android:screenOrientation="nosensor"
            android:configChanges="orientation|screenSize|keyboardHidden">
            <meta-data android:name="@string/minVersion" android:value="11"/>
            <meta-data android:name="@string/isLaunchableActivity" android:value="true"/>
        </activity>

        <activity
            android:label="@string/player_controls_demo_name"
            android:name=".youtube.PlayerControlsDemoActivity"
            android:windowSoftInputMode="stateHidden">
            <meta-data android:name="@string/minVersion" android:value="8"/>
            <meta-data android:name="@string/isLaunchableActivity" android:value="true"/>
        </activity>

        <activity
            android:label="@string/fullscreen_demo_name"
            android:name=".youtube.FullscreenDemoActivity"
            android:screenOrientation="sensor"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/BlackNoTitleBarTheme">
            <meta-data android:name="@string/minVersion" android:value="8"/>
            <meta-data android:name="@string/isLaunchableActivity" android:value="true"/>
        </activity>

        <activity
            android:label="@string/action_bar_demo_name"
            android:name=".youtube.ActionBarDemoActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/OverlayActionBarTheme"
            android:screenOrientation="sensorLandscape">
            <meta-data android:name="@string/minVersion" android:value="11"/>
            <meta-data android:name="@string/isLaunchableActivity" android:value="true"/>
        </activity>

        <activity
            android:label="@string/standalone_player_demo_name"
            android:name=".youtube.StandalonePlayerDemoActivity">
            <meta-data android:name="@string/minVersion" android:value="8"/>
            <meta-data android:name="@string/isLaunchableActivity" android:value="true"/>
        </activity>

        <activity
            android:label="@string/intents_demo_name"
            android:name=".youtube.IntentsDemoActivity">
            <meta-data android:name="@string/minVersion" android:value="8"/>
            <meta-data android:name="@string/isLaunchableActivity" android:value="true"/>
        </activity>

    </application>
</manifest>